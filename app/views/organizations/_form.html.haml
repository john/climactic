= form_for @organization do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2= "#{pluralize(@organization.errors.count, "error")} prohibited this organization from being saved:"
      %ul
        - @organization.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :organization_type_id, class: "form-label"
    = f.number_field :organization_type_id, class: "form-control"
  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .mb-3
    = f.label :description, class: "form-label"
    = f.text_area :description, class: "form-control"
  .mb-3
    = f.label :external_identifier, class: "form-label"
    = f.text_field :external_identifier, class: "form-control"
  .mb-3
    = f.label :industry_sector, class: "form-label"
    // list ones attached to org
    = f.select(:industry_sector, options_from_collection_for_select(@industry_sectors, "id", "name"), {include_blank: true}, {class: "form-control"})
  .mb-3
    = f.label :address, class: "form-label"
    // list ones attached to org
    = f.select(:address, options_from_collection_for_select(@addresses, "id", "address_line_1"), {include_blank: true}, {class: "form-control"})
  .mb-3
    = f.submit 'Save', class: "btn btn-primary"
