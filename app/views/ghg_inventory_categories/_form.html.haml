= form_for @ghg_inventory_category do |f|
  - if @ghg_inventory_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ghg_inventory_category.errors.count, "error")} prohibited this ghg_inventory_category from being saved:"
      %ul
        - @ghg_inventory_category.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .mb-3
    = f.label :code, class: "form-label"
    = f.text_field :code, class: "form-control"
  .mb-3
    = f.submit 'Save', class: "btn btn-primary"
