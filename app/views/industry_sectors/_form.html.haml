= form_for @industry_sector do |f|
  - if @industry_sector.errors.any?
    #error_explanation
      %h2= "#{pluralize(@industry_sector.errors.count, "error")} prohibited this industry_sector from being saved:"
      %ul
        - @industry_sector.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :code, class: "form-label"
    = f.text_field :code, class: "form-control"
  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .mb-3
    = f.submit 'Save', class: "btn btn-primary"
