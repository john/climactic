= form_for @facility_type do |f|
  - if @facility_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@facility_type.errors.count, "error")} prohibited this facility_type from being saved:"
      %ul
        - @facility_type.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :code, class: "form-label"
    = f.text_field :code, class: "form-control"
  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
